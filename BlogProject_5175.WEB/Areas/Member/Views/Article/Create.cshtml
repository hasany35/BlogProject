@model CreateArticleDTO


<div class="card card-primary" style="width:100%">
    <div class="card-header">
        <h3 class="card-title">KATEGORİ OLUŞTURMA PANELİ</h3>
    </div>
    <form asp-action="Create" method="post" enctype="multipart/form-data">
        <div class="card-body">
            <div class="" asp-validation-summary="All">
            </div>
            <div class="form-group">
                <label asp-for="Title">Title</label>
                <input asp-for="Title" type="text" class="form-control">
            </div>
            <div class="form-group">
                <label asp-for="Content">Content</label>
                <textarea asp-for="Content" class="form-control" rows="10" style="resize:none;width:100%;"></textarea>
            </div>

            <div class="form-group">
                <label asp-for="ImagePath">Image</label>
                <input asp-for="ImagePath" type="file" class="form-control">
            </div>

            <input asp-for="AppUserID" type="hidden" value="@Model.AppUserID"/>

            <div class="form-group">
                <label asp-for="CategoryID">Category</label>
                <select asp-for="CategoryID">
                    @foreach (var item in Model.Categories)
                    {
                        <option value="@item.ID">  @item.Name </option>
                    }
                </select>
            </div>
        </div>
                  <div class="card-footer">
            <button type="submit" class="btn btn-primary">Oluştur</button>
        </div>
    </form>
  
</div>