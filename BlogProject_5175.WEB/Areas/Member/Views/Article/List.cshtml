@model List<GetArticleVM>

<div class="card">
    <div class="card-header">
        <h3 class="card-title">Category List</h3>

        <div class="card-tools">
            <ul class="pagination pagination-sm float-right">
                <li class="page-item"><a class="page-link" href="#">«</a></li>
                <li class="page-item"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item"><a class="page-link" href="#">»</a></li>
            </ul>
        </div>
    </div>
    <div class="card-body p-0">
        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Content</th>
                    <th>User Full Name</th>
                    <th>Category Name</th>
                    <th>image</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Title</td>
                        @if (@item.Content.Length > 31)
                        {
                            <td>@item.Content.Substring(0,100)+...</td>              

                        }
                        else
                        {
                            <td>@item.Content</td>              
                        }
                        <td>@item.UserFullName</td>
                        <td>@item.CategoryName</td>
                        <td><img src="@item.Image" class="img-circle" style="width: 50px" /></td>
                        <td>
                            <a asp-action="Update" asp-route-id="@item.ArticleID" class="btn btn-primary">Güncelle</a>
                        </td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@item.ArticleID" class="btn btn-danger">Sil</a>
                        </td>
                        <td>
                            <a asp-action="Detail" asp-route-id="@item.ArticleID" class="btn btn-warning">Detay</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
