@model UpdateArticleDTO

<div class="col-lg-6">
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title">Makale Güncelleme Paneli</h3>
        </div>

        <form asp-action="Update" method="post" enctype="multipart/form-data">
            <div class="card-body">
                <div class="form-group">
                    <label asp-for="Title">Başlık</label>
                    <input type="text" class="form-control" asp-for="Title" placeholder="Başlık">
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Content">Content</label>
                    <textarea rows="6" class="form-control" asp-for="Content" placeholder="içerik"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImagePath">Fotoğraf Yükle</label>
                    <input type="file" class="form-control" asp-for="ImagePath" placeholder="Fotoğraf Seç">
                    <span asp-validation-for="Image" class="text-danger"></span>
                    
                    <img style="width: 86px; top: 5px; position: relative;" src="@Model.Image" alt="resim" />

                    

                </div>

                <input type="hidden" asp-for="AppUserID" />
                <input type="hidden" asp-for="ID" />

                <div class="form-control">
                    <label asp-for="CategoryID">Kategoriler</label>
                    <select asp-for="CategoryID">
                                            @if(@Model.Categories !=null){
                        @foreach (var item in Model.Categories)
                        {
                            <option value="@item.ID">@item.Name</option>
                        }
                                            }
                    </select>
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">Güncelle</button>
            </div>
        </form>
    </div>
</div>