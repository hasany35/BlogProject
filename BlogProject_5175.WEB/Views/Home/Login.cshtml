

@model LoginDTO

<h4>KULLANICI GİRİ PANELİ</h4>
<br />
<form asp-action="Login" asp-controller="Home">
    <div class="form-group">
        <label>Mail Adress</label>
        <input asp-for="Mail" type="email" class="form-control" />
        <span asp-validation-for="Mail" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Password</label>
        <input asp-for="Password" type="password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-success" > GİRİŞ YAP </button>
</form>
 
        @if(TempData["Message"] != null){
            <div class="alert alert-danger" role="alert">
           <p><strong>@TempData["Message"]</strong></p>
        </div>
        }